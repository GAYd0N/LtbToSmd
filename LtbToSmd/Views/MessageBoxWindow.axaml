<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LtbToSmd.Views.MessageBoxWindow"
		CanResize="False"
        SizeToContent="WidthAndHeight"
        Title="Msg"
        mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="60">

	<Panel MinWidth="200" MinHeight="160">
		<Panel>
			<TextBlock x:Name="Title" Name="Title" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
			<TextBlock Name="Message" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
			<DockPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
				<Button Name="OK" Content="OK"/>
				<Button Name="Cancel" Content="Cancel"/>
			</DockPanel>
		</Panel>
	</Panel>
</Window>
